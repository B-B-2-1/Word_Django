<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4x4 LeaderBoard"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/TV4x4_1st"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/TV4x4_2nd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_below="@+id/TV4x4_1st"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/TV4x4_3rd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_below="@+id/TV4x4_2nd"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:layout_marginTop="80dp"
        android:id="@+id/TV4x4_P5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_below="@+id/TV4x4_3rd"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/TV4x4_P4"
        android:layout_below="@+id/TV4x4_P5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/TV4x4_P3"
        android:layout_below="@+id/TV4x4_P4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/TV4x4_P2"
        android:layout_below="@+id/TV4x4_P3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/TV4x4_P1"
        android:layout_below="@+id/TV4x4_P2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>