<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forfun.febie.word_django.Leaderboard">

    <TextView
        android:id="@+id/TV_leaderboardHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/TV_top3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginStart="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/TV_leaderboardHeading"
        />
    <TextView
        android:id="@+id/TV_5_leaderboard_before_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginStart="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TV_top3"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/but_to_3x3_leaderboard"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="3x3 Leaderboard"/>
        <Button
            android:id="@+id/but_to_4x4_leaderboard"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="4x4 Leaderboard"/>
        <Button
            android:id="@+id/but_to_5x5_leaderboard"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="5x5 Leaderboard"/>
    </LinearLayout>
</RelativeLayout>
